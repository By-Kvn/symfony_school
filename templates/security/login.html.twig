{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-center">Connexion</h1>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="card shadow-sm p-4 rounded">
                <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email :</label>
                        <input type="email" id="inputEmail" name="_username" value="{{ last_username }}" required autofocus class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe :</label>
                        <input type="password" id="inputPassword" name="_password" required class="form-control">
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('user_create') }}" class="btn btn-outline-success">
                    Cr√©er un compte
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
