{% extends 'base.html.twig' %}

{% block title %}üõçÔ∏è {{ produit.nom }} - Produit Premium{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* üé® Variables CSS pour le th√®me ultra-moderne */
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --danger-gradient: linear-gradient(135deg, #fc466b 0%, #3f5efb 100%);
            --glassmorphism-bg: rgba(255, 255, 255, 0.1);
            --glassmorphism-strong: rgba(255, 255, 255, 0.15);
            --glassmorphism-border: rgba(255, 255, 255, 0.2);
            --text-primary: #2d3748;
            --text-light: rgba(255, 255, 255, 0.9);
            --shadow-elevated: 0 25px 50px rgba(0, 0, 0, 0.15);
            --shadow-floating: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        /* üåü Arri√®re-plan anim√© r√©volutionnaire */
        body {
            margin: 0;
            font-family: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(-45deg, #667eea, #764ba2, #f093fb, #f5576c, #11998e, #38ef7d);
            background-size: 400% 400%;
            animation: megaGradientShift 20s ease infinite;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        @keyframes megaGradientShift {
            0% { background-position: 0% 50%; }
            25% { background-position: 100% 50%; }
            50% { background-position: 50% 100%; }
            75% { background-position: 50% 0%; }
            100% { background-position: 0% 50%; }
        }

        /* ‚ú® Overlay glassmorphique multicouche */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
                rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(30px);
            z-index: -1;
        }

        /* üöÄ Container principal */
        .product-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
            position: relative;
            z-index: 10;
        }

        /* üéØ Header Hero avec breadcrumb */
        .product-header {
            text-align: center;
            margin-bottom: 3rem;
            animation: heroFadeIn 1.2s ease-out;
        }

        .breadcrumb-modern {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
        }

        .breadcrumb-modern a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb-modern a:hover {
            color: white;
        }

        .product-title {
            background: linear-gradient(135deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 3rem;
            font-weight: 900;
            margin: 0;
            letter-spacing: -0.03em;
            text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
        }

        /* üé® Layout en grid moderne */
        .product-layout {
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 3rem;
            align-items: start;
        }

        /* üìä Carte principale des d√©tails */
        .product-details {
            background: var(--glassmorphism-bg);
            backdrop-filter: blur(25px);
            border: 1px solid var(--glassmorphism-border);
            border-radius: 32px;
            padding: 3rem;
            box-shadow: var(--shadow-elevated);
            position: relative;
            overflow: hidden;
            animation: slideInLeft 0.8s ease-out;
        }

        .product-details::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--primary-gradient);
            border-radius: 32px 32px 0 0;
        }

        /* üè∑Ô∏è D√©tails en cards */
        .detail-grid {
            display: grid;
            gap: 1.5rem;
        }

        .detail-item {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 1.5rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .detail-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--success-gradient);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .detail-item:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateX(5px);
        }

        .detail-item:hover::before {
            transform: scaleY(1);
        }

        .detail-label {
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-light);
            line-height: 1.4;
        }

        .detail-value.highlight {
            background: var(--success-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            font-size: 1.3rem;
        }

        /* üéØ Sidebar d'actions */
        .product-sidebar {
            position: sticky;
            top: 2rem;
            animation: slideInRight 0.8s ease-out;
        }

        /* üí≥ Carte d'achat premium */
        .purchase-card {
            background: var(--glassmorphism-strong);
            backdrop-filter: blur(25px);
            border: 1px solid var(--glassmorphism-border);
            border-radius: 28px;
            padding: 2.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-floating);
            position: relative;
            overflow: hidden;
        }

        .purchase-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--success-gradient);
            border-radius: 28px 28px 0 0;
        }

        .price-display {
            text-align: center;
            margin-bottom: 2rem;
        }

        .price-label {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 0.5rem;
        }

        .price-value {
            font-size: 2.5rem;
            font-weight: 900;
            background: var(--success-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .price-currency {
            font-size: 1.2rem;
            opacity: 0.8;
        }

        /* üî• Boutons ultra-modernes */
        .btn-purchase {
            width: 100%;
            background: var(--success-gradient);
            border: none;
            color: white;
            padding: 1.25rem 2rem;
            border-radius: 20px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 10px 30px rgba(17, 153, 142, 0.3);
            margin-bottom: 1rem;
        }

        .btn-purchase::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s;
        }

        .btn-purchase:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(17, 153, 142, 0.4);
        }

        .btn-purchase:hover::before {
            left: 100%;
        }

        .btn-purchase:active {
            transform: translateY(-1px);
        }

        /* ‚ö†Ô∏è Alerte stylis√©e */
        .alert-modern {
            background: rgba(245, 87, 108, 0.1);
            border: 1px solid rgba(245, 87, 108, 0.3);
            border-radius: 16px;
            padding: 1.5rem;
            color: var(--text-light);
            display: flex;
            align-items: center;
            gap: 1rem;
            backdrop-filter: blur(10px);
            margin-bottom: 1rem;
        }

        .alert-icon {
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        /* üéÆ Carte d'actions admin */
        .admin-card {
            background: var(--glassmorphism-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glassmorphism-border);
            border-radius: 24px;
            padding: 2rem;
            box-shadow: var(--shadow-floating);
            margin-bottom: 2rem;
        }

        .admin-title {
            color: var(--text-light);
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .admin-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-admin {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-admin:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            color: white;
            text-decoration: none;
        }

        .btn-danger {
            background: var(--danger-gradient);
        }

        .btn-danger:hover {
            box-shadow: 0 8px 25px rgba(252, 70, 107, 0.3);
        }

        /* üîô Bouton retour stylis√© */
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            padding: 0.8rem 1.5rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .back-link:hover {
            color: white;
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateX(-5px);
            text-decoration: none;
        }

        /* üé™ Animations */
        @keyframes heroFadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* üì± Responsive Design */
        @media (max-width: 1024px) {
            .product-layout {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .product-sidebar {
                position: relative;
                top: auto;
            }
        }

        @media (max-width: 768px) {
            .product-container {
                padding: 0 1rem;
                margin: 1rem auto;
            }
            
            .product-details,
            .purchase-card,
            .admin-card {
                padding: 2rem 1.5rem;
            }
            
            .product-title {
                font-size: 2rem;
            }
            
            .admin-actions {
                flex-direction: column;
            }
            
            .btn-admin {
                justify-content: center;
            }
        }

        /* üé® S√©lection personnalis√©e */
        ::selection {
            background: rgba(102, 126, 234, 0.3);
            color: white;
        }

        /* ‚ú® Scroll smooth */
        html {
            scroll-behavior: smooth;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="product-container">
        <!-- üéØ Header Hero -->
        <div class="product-header">
            <div class="breadcrumb-modern">
                <a href="{{ path('app_produit_index') }}">üè† Catalogue</a>
                <span>‚Ä∫</span>
                <span>{{ produit.category }}</span>
                <span>‚Ä∫</span>
                <span>{{ produit.nom }}</span>
            </div>
            <h1 class="product-title">{{ produit.nom }}</h1>
        </div>

        <!-- üé® Layout principal -->
        <div class="product-layout">
            <!-- üìä D√©tails du produit -->
            <div class="product-details">
                <div class="detail-grid">
                    <div class="detail-item">
                            <div class="detail-label">
                                üÜî Identifiant
                            </div>
                            <div class="detail-value">#{{ produit.id }}</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üè∑Ô∏è Nom du produit
                        </div>
                        <div class="detail-value">{{ produit.nom }}</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üí∞ Prix
                        </div>
                        <div class="detail-value highlight">{{ produit.prix }} points</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üìÇ Cat√©gorie
                        </div>
                        <div class="detail-value">{{ produit.category }}</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üìù Description
                        </div>
                        <div class="detail-value">{{ produit.description|nl2br }}</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üìÖ Cr√©√© le
                        </div>
                        <div class="detail-value">
                            {{ produit.createdAt ? produit.createdAt|date('d/m/Y √† H:i') : 'Non d√©fini' }}
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            üîÑ Mis √† jour le
                        </div>
                        <div class="detail-value">
                            {{ produit.updatedAt ? produit.updatedAt|date('d/m/Y √† H:i') : 'Jamais modifi√©' }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- üéØ Sidebar d'actions -->
            <div class="product-sidebar">
                <!-- üí≥ Carte d'achat -->
                <div class="purchase-card">
                    <div class="price-display">
                        <div class="price-label">üíé Prix Premium</div>
                        <div class="price-value">
                            {{ produit.prix }}
                            <span class="price-currency">pts</span>
                        </div>
                    </div>

                    {% if app.user and app.user.actif %}
                        <form method="post" action="{{ path('app_produit_acheter', {id: produit.id}) }}" 
                              onsubmit="return confirm('üõí Confirmer l\'achat de {{ produit.nom }} pour {{ produit.prix }} points ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('achat' ~ produit.id) }}">
                            <button type="submit" class="btn-purchase">
                                üöÄ Acheter maintenant
                            </button>
                        </form>
                        <div style="text-align: center; font-size: 0.85rem; color: rgba(255,255,255,0.6);">
                            ‚úÖ Achat s√©curis√© et instantan√©
                        </div>
                    {% else %}
                        <div class="alert-modern">
                            <div class="alert-icon">‚ö†Ô∏è</div>
                            <div>
                                <strong>Connexion requise</strong><br>
                                Vous devez √™tre connect√© et avoir un compte actif pour acheter ce produit.
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- üéÆ Actions admin -->
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="admin-card">
                        <div class="admin-title">
                            üëë Actions Administrateur
                        </div>
                        <div class="admin-actions">
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn-admin">
                                ‚úèÔ∏è Modifier
                            </a>
                            {{ include('produit/_delete_form.html.twig', {
                                'form_class': 'btn-admin btn-danger',
                                'button_text': 'üóëÔ∏è Supprimer'
                            }) }}
                        </div>
                    </div>
                {% endif %}

                <!-- üîô Retour -->
                <a href="{{ path('app_produit_index') }}" class="back-link">
                    ‚Üê Retour au catalogue
                </a>
            </div>
        </div>
    </div>
{% endblock %}