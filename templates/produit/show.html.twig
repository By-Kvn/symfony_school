{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ produit.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
    {% endif %}

    {{ include('produit/_delete_form.html.twig') }}
{# <pre>
    app.user = {{ app.user ? 'connecté' : 'non connecté' }}
    actif = {{ app.user ? (app.user.actif ? 'actif' : 'inactif') : 'n/a' }}
</pre> #}

    {% if app.user and app.user.actif %}
    <form method="post" action="{{ path('app_produit_acheter', {id: produit.id}) }}" onsubmit="return confirm('Confirmer l\'achat ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('achat' ~ produit.id) }}">
        <button class="btn btn-success mt-3">Acheter pour {{ produit.prix }} points</button>
    </form>
{% else %}
    <div class="alert alert-warning mt-3">
        Vous devez être connecté et actif pour acheter ce produit.
    </div>
{% endif %}

{% endblock %}
