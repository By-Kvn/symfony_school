{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if user %}
    <p>Bonjour {{ user.prenom ~ ' ' ~ user.nom }} ({{ user.email }})</p>
    <p>R√¥les :
    {% for role in user.roles %}
        <span class="badge bg-info text-dark">{{ role }}</span>
    {% endfor %}
    </p>
{% if user.points is not null %}
    <p>Points : <span class="badge bg-success">{{ user.points }}</span></p>
{% else %}
    <p>Points : <span class="badge bg-secondary">Non d√©fini</span></p>
{% endif %}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-dark mb-3">üéØ Acc√©der au tableau de bord admin</a>
        <a href="{{ path('admin_notifications_index') }}" class="btn btn-outline-primary mb-3">üîî Voir les notifications</a>

{% endif %}

    </p>
    <form method="post" action="{{ path('app_logout') }}" style="display:inline;">
        <button type="submit" class="btn btn-secondary">Se d√©connecter</button>
    </form>
{% else %}
    <p>Utilisateur non connect√©</p>
    <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
    <a href="{{ path('user_create') }}" class="btn btn-success">Cr√©er un compte</a>
{% endif %}

<h1>{{ 'produit.titre'|trans }}</h1>

{% if app.user and not app.user.actif %}
    <div class="alert alert-warning">
        ‚ö†Ô∏è Votre compte est d√©sactiv√©. Vous ne pouvez pas acheter de produits.
    </div>
{% endif %}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Category</th>
            <th>Description</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
        <tr>
            <td>{{ produit.id }}</td>
            <td>{{ produit.nom }}</td>
            <td>{{ produit.prix }}</td>
            <td>{{ produit.category }}</td>
            <td>{{ produit.description }}</td>
            <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>

                {# ‚úÖ Boutons visibles uniquement pour les admins #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button class="btn btn-danger btn-sm">delete</button>
                    </form>
                {% endif %}
                {# ‚úÖ Bouton "Acheter" visible uniquement pour les utilisateurs connect√©s ET ayant le r√¥le USER #}
{% if is_granted('ROLE_USER') %}
{% if user and user.points >= produit.prix %}
    <form method="post" action="{{ path('app_produit_acheter', {'id': produit.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('acheter' ~ produit.id) }}">
        <button type="submit" class="btn btn-warning btn-sm">Acheter</button>
    </form>
{% else %}
    <button class="btn btn-secondary btn-sm" disabled>Pas assez de points</button>
{% endif %}

{% endif %}

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# ‚úÖ Lien de cr√©ation visible uniquement pour les admins #}
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_produit_new') }}" class="btn btn-success">Create new</a>
{% endif %}
{% endblock %}
