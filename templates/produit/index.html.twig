{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
{% if user %}
    <p>Bonjour {{ user.prenom ~ ' ' ~ user.nom }} ({{ user.email }})</p>
    <p>Rôles :
    {% for role in user.roles %}
        <span class="badge bg-info text-dark">{{ role }}</span>
    {% endfor %}
    </p>
    <form method="post" action="{{ path('app_logout') }}" style="display:inline;">
        <button type="submit" class="btn btn-secondary">Se déconnecter</button>
    </form>
{% else %}
    <p>Utilisateur non connecté</p>
    <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
    <a href="{{ path('user_create') }}" class="btn btn-success">Créer un compte</a>
{% endif %}

<h1>Liste des produits</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Category</th>
            <th>Description</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
        <tr>
            <td>{{ produit.id }}</td>
            <td>{{ produit.nom }}</td>
            <td>{{ produit.prix }}</td>
            <td>{{ produit.category }}</td>
            <td>{{ produit.description }}</td>
            <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>

                {# ✅ Boutons visibles uniquement pour les admins #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button class="btn btn-danger btn-sm">delete</button>
                    </form>
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# ✅ Lien de création visible uniquement pour les admins #}
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_produit_new') }}" class="btn btn-success">Create new</a>
{% endif %}
{% endblock %}
