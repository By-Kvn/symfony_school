{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* üé® Variables CSS pour le th√®me 2024/2025 */
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --glassmorphism-bg: rgba(255, 255, 255, 0.08);
            --glassmorphism-border: rgba(255, 255, 255, 0.2);
            --text-primary: #2d3748;
            --text-secondary: #4a5568;
            --shadow-elevated: 0 20px 40px rgba(0, 0, 0, 0.1);
            --shadow-floating: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        /* üåü Arri√®re-plan anim√© ultra-moderne */
        body {
            margin: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* ‚ú® Overlay glassmorphique */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            z-index: -1;
        }

        /* üöÄ Container principal avec glassmorphism */
        .form-container {
            max-width: 700px;
            margin: 4rem auto;
            padding: 0;
            position: relative;
            z-index: 10;
        }

        /* üéØ Hero Section */
        .form-hero {
            text-align: center;
            margin-bottom: 3rem;
            animation: fadeInUp 1s ease-out;
        }

        .form-hero h1 {
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5rem;
            font-weight: 800;
            margin: 0 0 1rem 0;
            letter-spacing: -0.02em;
        }

        .form-hero p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
            margin: 0;
            font-weight: 300;
        }

        /* üé® Carte principale glassmorphique */
        .modern-form {
            background: var(--glassmorphism-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glassmorphism-border);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: var(--shadow-elevated);
            position: relative;
            overflow: hidden;
            animation: slideInUp 0.8s ease-out;
        }

        .modern-form::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--primary-gradient);
            border-radius: 24px 24px 0 0;
        }

        /* üì± Grid responsive pour les champs */
        .form-grid {
            display: grid;
            gap: 2rem;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }

        /* üéØ Groupes de champs */
        .form-group {
            position: relative;
            animation: fadeIn 0.6s ease-out forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        .form-group:nth-child(1) { animation-delay: 0.1s; }
        .form-group:nth-child(2) { animation-delay: 0.2s; }
        .form-group:nth-child(3) { animation-delay: 0.3s; }
        .form-group:nth-child(4) { animation-delay: 0.4s; }

        /* üè∑Ô∏è Labels modernes */
        .form-label {
            display: block;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            position: relative;
        }

        .form-label::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 30px;
            height: 2px;
            background: var(--success-gradient);
            border-radius: 2px;
        }

        /* üé® Inputs ultra-modernes */
        .form-input {
            width: 100%;
            padding: 1.25rem 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            color: white;
            font-size: 1rem;
            font-weight: 400;
            backdrop-filter: blur(10px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

        .form-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-input:focus {
            outline: none;
            border-color: rgba(102, 126, 234, 0.8);
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

        .form-input:hover {
            border-color: rgba(255, 255, 255, 0.4);
            background: rgba(255, 255, 255, 0.12);
        }

        /* üö® Erreurs stylis√©es */
        .form-errors {
            color: #ff6b6b;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-errors::before {
            content: '‚ö†Ô∏è';
            font-size: 0.9rem;
        }

        /* üéØ Actions flottantes */
        .form-actions {
            margin-top: 3rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* üî• Boutons avec effets shimmer */
        .btn-primary {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            min-width: 160px;
            box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 40px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 500;
            cursor: pointer;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            min-width: 120px;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
        }

        /* üé™ Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(40px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* üì± Responsive Design */
        @media (max-width: 768px) {
            .form-container {
                margin: 2rem 1rem;
            }
            
            .modern-form {
                padding: 2rem 1.5rem;
            }
            
            .form-hero h1 {
                font-size: 2rem;
            }
            
            .form-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .form-actions {
                flex-direction: column;
                align-items: center;
            }
            
            .btn-primary,
            .btn-secondary {
                width: 100%;
                max-width: 280px;
            }
        }

        /* üé® S√©lection de texte personnalis√©e */
        ::selection {
            background: rgba(102, 126, 234, 0.3);
            color: white;
        }

        /* üìç Focus outline personnalis√© */
        *:focus {
            outline: 2px solid rgba(102, 126, 234, 0.5);
            outline-offset: 2px;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- üöÄ Hero Section -->
    <div class="form-hero">
        <h1>‚ú® Formulaire de cr√©ation de produit</h1>
        <p>üé® zone admin only</p>
    </div>

    <!-- üéØ Container principal -->
    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
            <div class="form-grid">
                {% for child in form %}
                    {% if child.vars.name != '_token' %}
                        <div class="form-group">
                            {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(child, {'attr': {'class': 'form-input'}}) }}
                            <div class="form-errors">
                                {{ form_errors(child) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    üöÄ {{ button_label|default('Sauvegarder') }}
                </button>
                <button type="reset" class="btn-secondary">
                    üîÑ R√©initialiser
                </button>
            </div>
            
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}